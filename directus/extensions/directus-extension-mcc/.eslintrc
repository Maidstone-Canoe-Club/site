{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "indent": ["error", 2]
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}
